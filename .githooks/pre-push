#!/bin/bash

BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Protect master, test, and current branch from accidental push
if [[ "$BRANCH" == "master" || "$BRANCH" == "test" ]]; then
    echo "❌ Pushing directly to '$BRANCH' is not allowed! Use a pull request instead."
    exit 1
fi

echo "✅ Push allowed!"
